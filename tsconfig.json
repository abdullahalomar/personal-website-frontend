{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/UI/Skill/Skill.jsx",
    "src/components/UI/SkillSet/SkillSet.tsx",
    "src/app/(WihCommonLayout)/contact/page.jsx",
    "src/app/(WithDashboardLayout)/layout.tsx",
    "src/app/(WithDashboardLayout)/Dashboard-portfolio/blogs/page.jsx",
    "src/components/EditBlogModal/EditBlogModal.jsx",
    "src/app/(WithDashboardLayout)/Dashboard-portfolio/hero/page.jsx",
    "src/components/EditAboutModal/EditAboutModal.jsx",
    "src/app/(WihCommonLayout)/projects/page.jsx",
    "src/app/login/page.jsx",
    "src/components/UI/HeroSection/HeroSection.jsx"
  ],
  "exclude": ["node_modules"]
}
